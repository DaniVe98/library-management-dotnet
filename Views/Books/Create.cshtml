@model LibraryManagement.Models.Book

<h2 class="text-xl font-bold mb-4">Agregar Libro</h2>

<form asp-action="Create" method="post" class="bg-white p-6 rounded shadow-md space-y-4">
    
    <div>
        <label class="block mb-1 font-medium">TÃ­tulo</label>
        <input asp-for="Title"
               class="w-full border border-gray-300 p-2 rounded" />
        <span asp-validation-for="Title" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label class="block mb-1 font-medium">Autor</label>
        <select asp-for="AuthorId"
                asp-items="ViewBag.Authors"
                class="w-full border border-gray-300 p-2 rounded">
            <option value="">Seleccione un autor</option>
        </select>
        <span asp-validation-for="AuthorId" class="text-red-500 text-sm"></span>
    </div>

    <div>
        <label class="block mb-1 font-medium">Stock</label>
        <input asp-for="Stock" type="number"
               class="w-full border border-gray-300 p-2 rounded" />
        <span asp-validation-for="Stock" class="text-red-500 text-sm"></span>
    </div>

    <button type="submit"
            class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
        Guardar
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
